 {  


 }//End connect
 
 public static int getSpeed(boolean[] D)
 {
    boolean accelerate, decelerate;
  
     accelerate = D[4];
     decelerate = D[5];
     
     if(accelerate == true)
     {
        speed += 50;
        command[4] = false;
        }
     
     if(decelerate == true)
     {
        speed -= 50;
        command[5] = false;
        }
     
     return speed;
     }//End getSpeed
 
}//NXTtr Class